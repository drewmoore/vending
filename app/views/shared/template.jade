doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Vend It Up!
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    if machine
      nav.top-bar
        ul.title-area
          li.name
            h1: a(href="/") Vend It Up!

        section.top-bar-section
          ul.left
            li: a(href="/beverageTypes/create") New Beverage
            li.divider
            li: a(href="/beverageTypes/edit") Change Beverages
          ul.right
            li: a(href="/machines/edit/" + machine._id.toString()) Administer Machine
            li.divider
            li: a(href="/machines/summary/" + machine._id.toString()) Summary
            li.divider
            li: a(href="/transactions") Records

    .row
      .small-12.columns
        .row
          .small-12.columns.main-content
            block content

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.min.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')
