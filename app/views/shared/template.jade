doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Vend It Up!
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    nav.top-bar
      ul.title-area
        li.name
          h1: a(href="/") Vend It Up!
        li.toggle-topbar.menu-icon
          a(href="#") Menu

      section.top-bar-section
        ul.left
          li: a(href="/beverageTypes/create") New Beverage
          li: a(href="/beverageTypes/edit") Change Beverages
        ul.right
          li: a(href="/admin") Administer Machine
          li.divider
          li: a(href="/transactions") Records

    .row
      .small-12.columns
        .row
          .small-12.columns.main-content
            block content

    script(src='/js/vendor/jquery.js')
