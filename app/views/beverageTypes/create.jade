extends ../shared/template

block content

  .row
    .small-2.columns
      &nbsp;
    .small-8.columns
      if err
        .row
          .small-12.columns.error-space
              p #{err}
    .small-2.columns

  .row
    .small-12.columns
      .row
        .small-12.columns
          form(action='/beverageTypes/create', method='post', enctype='multipart/form-data')
            fieldset
              legend Add a New Beverage
                label Name
                input(name='name', type='text', value='Cheerwine, Jarritos Lime, etc...')
                select(name='quantity')
                    option(selected disabled) Choose a quantity to stock
                    - for(var i=0; i<quantityLimit; i++){
                      - var quantity = i + 1;
                        option(value=quantity)= quantity
                    - }
                label Upload a Logo
                input(name='imageFile', type='file')
                button Add the Beverage
